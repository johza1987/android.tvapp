@using InternetAccountModel.EDM
@using WebExtension.Models;
@{
    ViewBag.Title = "รายการใบแจ้งหนี้";
    string controller = (string)System.Web.HttpContext.Current.Request.RequestContext.RouteData.Values["controller"];
