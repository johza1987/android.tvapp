@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title>E-Assessment</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />  
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
</head>

<body>
<div class="image-container set-full-height ">
    <!--   Big container   -->
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <!--      Wizard container        -->   
               @using (Html.BeginForm("Login", "Main", FormMethod.Post)) 
                {  
                <div class="wizard-container"> 
                    <div class="card wizard-card ct-wizard-orange" id="wizard"  style="background-image: url('../Content/img/bg.jpg')">
                    	    <div class="wizard-header">
                        	    <h3>
                                  <img src="~/Content/img/login_logo.png" class="img-responsive" />
                        	    </h3>
                    	    </div>
                            <div class="row">
                                <div class="col-sm-4 col-sm-offset-1">
                                    <div class="picture-container" style="margin-top:-8px;">
                                        <div class="picture">
                                            <img src="~/Content/img/login_image.png" class="picture-src" id="wizardPicturePreview" title=""/>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">                                    
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">ประเภทผู้ใช้งาน</label>
                                        <select class="form-control" name="authentype">
                                            <option value="teacher">คุณครู</option>
                                            <option value="officer">เจ้าหน้าที่</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">ชื่อผู้ใช้งาน</label>
                                        <input type="text" class="form-control" placeholder="Username">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">รหัสผ่าน</label>
                                        <input type="text" class="form-control" placeholder="Password">
                                    </div>
                                    
                                    <input type="submit" class="btn btn-next btn-fill btn-warning btn-wd btn-sm" value="เข้าสู่ระบบ" />
                                    <a href="@Url.Action("Register", "Main")" class="btn btn-next btn-fill btn-info btn-wd btn-sm">ลงทะเบียน</a><br /><br />
                                    <span style="color:#808080; margin-top:20px;">www.e-assessment.com</span>
                                </div>
                            </div>
                    </div>
                </div> <!-- wizard container -->
               }
            </div>
        </div><!-- end row -->
    </div> <!--  big container -->
    <footer class="footer">
    <div class="container">
        <div class="row">
        	<div class="col-lg-12 copyright">
            	2014 - 2015 © www.e-assessment.com All rights reserverd. 
            </div>
        </div>
    </div>
</footer>
</div>

</body>
<script src="~/Scripts/jquery-2.1.3.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script>
    $(document).ready(function () {
        $height = $(document).height();
        $('.set-full-height').css('height', $height);
    });

    $(window).resize(function () {
        $height = $(window).height();
        $('.set-full-height').css('height', $height);
    });
</script>
</html>