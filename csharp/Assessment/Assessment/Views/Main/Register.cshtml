@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title>E-Assessment</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />  
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
</head>

<body>
<div class="image-container set-full-height ">
    <!--   Big container   -->
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <!--      Wizard container        -->   
               @using (Html.BeginForm("Register", "Main", FormMethod.Post)) 
                {  
                    <div class="wizard-container" style="padding-top:20px"> 
                        <div class="card wizard-card ct-wizard-orange" id="wizard">
                    	        <div class="wizard-header">
                        	        <h3>
                                      <img src="~/Content/img/login_logo.png" class="img-responsive" />
                        	        </h3>
                    	        </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <h4 class="info-text"><i class="fa fa-file-text-o"></i>&nbsp; ลงทะเบียนโรงเรียน</h4>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group">
                                        <label>Username <span class="required">*</span></label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div>
                                </div>
                                 <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group">
                                        <label>Password <span class="required">*</span></label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div>
                                </div>
                                 <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group">
                                        <label>Confirm Password <span class="required">*</span></label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div>
                                </div>
                                 <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group">
                                        <label>ชื่อโรงเรียน <span class="required">*</span></label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div>
                                </div>
                                 <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group">
                                        <label>เครือข่าย <span class="required">*</span></label><br>
                                            <select name="" class="form-control">
                                            <option value=""></option>
                                            <option value="">เมืองสุรินทร์</option>
                                        </select>
                                        </div>
                                    </div>                                    
                                     <div class="col-sm-5">
                                        <div class="form-group">
                                        <label>ประเภทโรงเรียน <span class="required">*</span></label><br>
                                            <select name="" class="form-control">
                                            <option value=""></option>
                                            <option value="">ขยายโอกาส</option>
                                        </select>
                                        </div>
                                    </div>
                                </div>
                                 <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group">
                                        <label>ที่อยู่
                                        </label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div>                                    
                                     <div class="col-sm-2">
                                        <div class="form-group">
                                        <label>หมู่ที่
                                        </label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div>                                     
                                     <div class="col-sm-3">
                                        <div class="form-group">
                                        <label>ถนน
                                        </label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div>
                                </div>
                                 <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group">
                                        <label>ตำบล
                                        </label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div>                                    
                                     <div class="col-sm-5">
                                        <div class="form-group">
                                        <label>อำเภอ
                                        </label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div> 
                                </div>
                                 <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group">
                                        <label>จังหวัด
                                        </label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div>                                    
                                     <div class="col-sm-5">
                                        <div class="form-group">
                                        <label>รหัสไปรษณีย์
                                        </label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div> 
                                </div>
                                 <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group">
                                        <label>หมายเลขโทรศัพท์
                                        </label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div>                                    
                                     <div class="col-sm-5">
                                        <div class="form-group">
                                        <label>Email
                                        </label>
                                            <input type="text" class="form-control" placeholder="">
                                        </div>
                                    </div> 
                                </div>
                                <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <input type="submit" class="btn btn-next btn-fill btn-warning btn-wd btn-sm" value="ลงทะเบียน" />
                                        <input type="reset" class="btn btn-next btn-fill btn-info btn-wd btn-sm" value="ล้างข้อมูล" />
                                    </div> 
                                </div> 
                                <br />
                        </div>
                    </div> <!-- wizard container -->
               }
            </div>
        </div><!-- end row -->
    </div> <!--  big container -->
    <footer class="footer">
    <div class="container">
        <div class="row">
        	<div class="col-lg-12 copyright">
            	2014 - 2015 © www.e-assessment.com All rights reserverd. 
            </div>
        </div>
    </div>
</footer>
</div>

</body>
<script src="~/Scripts/jquery-2.1.3.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script>
    $(document).ready(function () {
        $('.set-full-height').css('height', $(document).height());
    });

    $(window).resize(function () {
        $('.set-full-height').css('height', $(window).height());
    });
</script>
</html>