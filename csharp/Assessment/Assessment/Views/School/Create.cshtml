@{
    ViewBag.Title = "เพิ่มข้อมูลโรงเรียน"; 
}

<br />
<ol class="breadcrumb">
    <li><i class="icon-grid">&nbsp; </i><a href="/">หน้าหลัก</a></li>
    <li><a href="@Url.Action("Index")">จัดการข้อมูลโรงเรียน</a></li>
    <li class="active">เพิ่มข้อมูลโรงเรียน</li>
</ol>

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="icon-star"></i>&nbsp; เพิ่มข้อมูลโรงเรียน
            </div>
            <div class="panel-body">
                 <form role="form">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>ชื่อโรงเรียน</label>
                                <input class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                                <div class="form-group">
                                    <label>เครือข่าย</label>
                                    <select class="form-control">
                                        <option></option>
                                        <option>เมืองสุรินทร์ 2</option>
                                    </select>
                                </div>     
                                <div class="form-group">
                                    <label>ที่อยู่</label>
                                    <input class="form-control">
                                </div>                           
                                <div class="form-group">
                                    <label>ตำบล</label>
                                    <input class="form-control">
                                </div>                             
                                <div class="form-group">
                                    <label>จังหวัด</label>
                                    <input class="form-control">
                                </div>                           
                                <div class="form-group">
                                    <label>หมายเลขโทรศัพท์</label>
                                    <input class="form-control">
                                </div> 
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">           
                            <div class="form-group">
                                <label>ประเภทโรงเรียน</label>
                                <select class="form-control">
                                    <option></option>
                                    <option>ขยายโอกาส</option>
                                </select>
                            </div> 
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label>หมู่ที่</label>
                                    <input class="form-control">
                                </div>
                                <div class="form-group col-lg-6">
                                    <label>ถนน</label>
                                    <input class="form-control">
                                </div> 
                             </div>                          
                            <div class="form-group">
                                <label>อำเภอ</label>
                                <input class="form-control">
                            </div>                            
                            <div class="form-group">
                                <label>รหัสไปรษณีย์</label>
                                <input class="form-control">
                            </div>                             
                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control">
                            </div>
                        </div>
                         <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                    <div class="row">
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-floppy-disk"></i>  บันทึกข้อมูล</button>
                            <button type="reset" class="btn btn-default"><i class="glyphicon glyphicon-refresh"></i>  ล้างข้อมูล</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->