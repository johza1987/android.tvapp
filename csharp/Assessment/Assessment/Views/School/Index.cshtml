@using Assessment.Models;
@{
    ViewBag.Title = "รายชื่อโรงเรียน"; 
}

<br />
<ol class="breadcrumb">
    <li><i class="icon-grid">&nbsp; </i><a href="/">หน้าหลัก</a></li>
    <li><a href="@Url.Action("Index")">จัดการข้อมูลโรงเรียน</a></li>
    <li class="active">รายชื่อโรงเรียน</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">
        <i class="icon-notebook"></i>&nbsp; รายชื่อโรงเรียน
        <a href="@Url.Action("Create")" class="btn btn-success btn-xs pull-right"><i class="icon-plus"></i>&nbsp; เพิ่มข้อมูลโรงเรียน</a>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th style="width:100px">รหัสโรงเรียน</th>
                        <th>ชื่อโรงเรียน</th>
                        <th>เครือข่าย</th>
                        <th>ประเภท</th>
                        <th>Username</th>
                        <th>Password</th>
                        <th>ที่อยู่</th>
                        <th>เบอร์โทรศัพท์</th>
                        <th class="text-center" style="width:80px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @{                       
                        if ((IEnumerable<SchoolModel>)ViewData["GetDataSchool"] != null)
                        {
                            foreach (var item in (IEnumerable<SchoolModel>)ViewData["GetDataSchool"])
                            {
                            <tr>
                                <td>@item.sc_id</td>
                                <td>@item.sc_name</td>
                                <td>เมืองสุรินทร์ 2</td>
                                <td>ขยายโอกาส</td>
                                <td>@item.username</td>
                                <td>@item.password</td>
                                <td>@item.sc_address</td>
                                <td>@item.sc_tel</td>
                                <td class="text-center">
                                    <a href="#"><img src="~/Content/img/toolbar_delete_24.png" style="width:20px;" class="btnDelete" /></a>
                                    <a href="@Url.Action("Edit", "School", new { id = "1" })"><img src="~/Content/img/toolbar_edit_green_24.png" style="width:20px;"  /></a>
                                </td>
                            </tr>
                            }
                        }
                    }
                </tbody>
            </table>
            <nav>
              <ul class="pagination">
                <li>
                  <a href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li>
                  <a href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              </ul>
            </nav>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->
@section MyScripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("a > img.btnDelete").click(function () {
                if (confirm("ยืนยันการลบข้อมูล ?")) {
                }
                return false;
            });
        });
    </script>
}
