@using Assessment.Models;
@{
    ViewBag.Title = "ประเภทโรงเรียน"; 
}

<br />
<ol class="breadcrumb">
    <li><i class="icon-grid">&nbsp; </i><a href="/">หน้าหลัก</a></li>
    <li><a href="@Url.Action("Index")">จัดการข้อมูลโรงเรียน</a></li>
    <li class="active">ประเภทโรงเรียน</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">
        <i class="icon-notebook"></i>&nbsp; ประเภทโรงเรียน
        <a href="@Url.Action("TypeCreate")" class="btn btn-success btn-xs pull-right"><i class="icon-plus"></i>&nbsp; เพิ่มข้อมูลประเภทโรงเรียน</a>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th style="width:100px">รหัสประเภท</th>
                        <th>ชื่อประเภท</th>
                        <th class="text-center" style="width:80px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @{                       
                        if ((IEnumerable<SchoolTypeModel>)ViewData["DataSchoolType"] != null)
                        {
                            foreach (var item in (IEnumerable<SchoolTypeModel>)ViewData["DataSchoolType"])
                            {
                            <tr>
                                <td>@item.sctype_id</td>
                                <td>@item.sctype_name</td>
                                <td class="text-center">
                                    <a href="#"><img src="~/Content/img/toolbar_delete_24.png" style="width:20px;" class="btnDelete" /></a>
                                    <a href="@Url.Action("TypeEdit", "School", new { id = "1" })"><img src="~/Content/img/toolbar_edit_green_24.png" style="width:20px;"  /></a>
                                </td>
                            </tr>
                            }
                        }
                    }
                </tbody>
            </table>
            <nav>
              <ul class="pagination">
                <li>
                  <a href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li>
                  <a href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              </ul>
            </nav>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->
@section MyScripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("a > img.btnDelete").click(function () {
                if (confirm("ยืนยันการลบข้อมูล ?")) {
                }
                return false;
            });
        });
    </script>
}
