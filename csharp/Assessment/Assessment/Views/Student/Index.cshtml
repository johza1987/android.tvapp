@using Assessment.Models;
@{
    ViewBag.Title = "รายชื่อนักเรียน"; 
}

<br />
<ol class="breadcrumb">
    <li><i class="icon-grid">&nbsp; </i><a href="/">หน้าหลัก</a></li>
    <li><a href="@Url.Action("Index")">จัดการข้อมูลนักเรียน</a></li>
    <li class="active">รายชื่อนักเรียน</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">
        <i class="icon-notebook"></i>&nbsp; รายชื่อนักเรียน
        <a href="@Url.Action("Create")" class="btn btn-success btn-xs pull-right"><i class="icon-plus"></i>&nbsp; เพิ่มข้อมูลนักเรียน</a>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th style="width:100px">รหัสนักเรียน</th>
                        <th>ชื่อ-สกุล</th>
                        <th>เลขบัตรประชาชน</th>
                        <th>วันเกิด</th>
                        <th>ระดับชั้น</th>
                        <th>ประเภทความพิการ</th>
                        <th>เลขที่คนพิการ</th>
                        <th class="text-center" style="width:80px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @{                       
                        if ((IEnumerable<StudentModel>)ViewData["GetDataStudent"] != null)
                        {
                            foreach (var item in (IEnumerable<StudentModel>)ViewData["GetDataStudent"])
                            {
                            <tr>
                                <td>@item.std_id</td>
                                <td>@item.std_title @item.std_firstname @item.std_lastname</td>
                                <td>@item.std_idcard</td>
                                <td>@item.std_birthday</td>
                                <td>@item.std_grade</td>
                                <td>1 : บกพร่องทางการเห็น</td>
                                <td>@item.std_disabled</td>
                                <td class="text-center">
                                    <a href="#"><img src="~/Content/img/toolbar_delete_24.png" style="width:20px;" class="btnDelete" /></a>
                                    <a href="@Url.Action("Edit", "Student", new { id = "1" })"><img src="~/Content/img/toolbar_edit_green_24.png" style="width:20px;"  /></a>
                                </td>
                            </tr>
                            }
                        }
                    }
                </tbody>
            </table>
            <nav>
              <ul class="pagination">
                <li>
                  <a href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li>
                  <a href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              </ul>
            </nav>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->
@section MyScripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("a > img.btnDelete").click(function () {
                if (confirm("ยืนยันการลบข้อมูล ?")) {
                }
                return false;
            });
        });
    </script>
}
