@{
    ViewBag.Title = "แก้ไขข้อมูลนักเรียน"; 
}

<br />
<ol class="breadcrumb">
    <li><i class="icon-grid">&nbsp; </i><a href="/">หน้าหลัก</a></li>
    <li><a href="@Url.Action("SystemConfig")">ตั้งค่า</a></li>
    <li class="active">แก้ไขข้อมูลเวลาเปิด-ปิดระบบ</li>
</ol>

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="icon-clock"></i>&nbsp; แก้ไขข้อมูลเวลาเปิด-ปิดระบบ
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form">
                            <div class="form-group">
                                <label>ปีการศึกษา</label>
                                <input class="form-control" value="2557">
                            </div> 
                            <div class="form-group">
                                <label>วันที่ปิดระบบ</label>
                                <div class="input-group">
                                    <input type="text" class="form-control datepicker" value="01/01/2557">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>        
                            </div>   
                            <div class="form-group">
                                <label>วันที่ปิดระบบ</label>
                                <div class="input-group">
                                    <input type="text" class="form-control datepicker" value="31/01/2557">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>        
                            </div> 
                            <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-floppy-disk"></i>  บันทึกข้อมูล</button>
                            <button type="reset" class="btn btn-default"><i class="glyphicon glyphicon-refresh"></i>  ล้างข้อมูล</button>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section MyScripts {
<script type="text/javascript">
    $(function () {
        $('.datepicker').datepicker({ autoclose: true });
    });
</script>
}
