<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/css")
    @RenderSection("MyStyle", required: false)
</head>
<body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Main")">
                    <img src="~/Content/img/Logo.png" />
                </a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="icon-user"></i>&nbsp; JOHZA <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="/"><i class="icon-power"></i>&nbsp; Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
@*                        <li>
                            <a href="@Url.Action("Index","Main")"><i class="icon-grid"></i>&nbsp; หน้าหลัก</a>
                        </li>*@
                        @if (Session["AuthenType"].ToString().Equals("teacher"))
                        {
                        <li>
                            <a href="#"><i class="icon-users"></i>&nbsp; จัดการข้อมูลคุณครู<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">

                                <li>
                                    <a href="@Url.Action("Index", "Teacher")">รายชื่อคุณครู</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Create", "Teacher")">เพิ่มข้อมูลคุณครู</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#"><i class="icon-graduation"></i>&nbsp;  จัดการข้อมูลนักเรียน<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Index", "Student")">รายชื่อนักเรียน</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Create", "Student")">เพิ่มข้อมูลนักเรียน</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li> 
                        } 
                        @if (Session["AuthenType"].ToString().Equals("officer"))
                        {
                        <li>
                            <a href="#"><i class="icon-star"></i>&nbsp;  จัดการข้อมูลโรงเรียน<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Index", "School")">รายชื่อโรงเรียน</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Type", "School")">ประเภทโรงเรียน</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Group", "School")">รายชื่อเครือข่าย</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        }
                        @if (Session["AuthenType"].ToString().Equals("teacher"))
                        {
                        <li>
                            <a href="#"><i class="icon-note"></i>&nbsp;  ข้อมูลประเมิน<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Index", "Assessment")">รายการใบประเมิน</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Create", "Assessment")">เพิ่มข้อมูลใบประเมิน</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        }

                        <li>
                            <a href="#"><i class="icon-bar-chart"></i>&nbsp;  รายงาน<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                @if (Session["AuthenType"].ToString().Equals("teacher"))
                                {
                                    <li>
                                        <a href="@Url.Action("School", "Report")">รายงานรายโรงเรียน</a>
                                    </li>
                                }
                                @if (Session["AuthenType"].ToString().Equals("officer"))
                                {
                                    <li>
                                        <a href="@Url.Action("AllSchool", "Report")">โรงเรียนทั้งหมด </a>
                                    </li>                         
                                    <li>
                                        <a href="@Url.Action("Zone", "Report")">โรงเรียนที่คัดกรอง </a>
                                    </li>            
                                    <li>
                                        <a href="@Url.Action("Level", "Report")">ข้อมูลระดับชั้น</a>
                                    </li> 
                                }
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        
                        @if (Session["AuthenType"].ToString().Equals("officer"))
                        {
                        <li>
                            <a href="#"><i class="icon-settings"></i>&nbsp;  ตั้งค่า<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("SystemConfig", "Setting")">เวลาเปิด-ปิดระบบ</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        }
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    @Scripts.Render("~/scripts")
    @RenderSection("scripts", required: false)
    @RenderSection("MyScripts", required: false)

    
</body>
</html>
