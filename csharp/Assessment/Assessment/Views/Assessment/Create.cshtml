@section MyStyle {
<link href="~/Content/jquery.bootstrap.wizard.css" rel="stylesheet" />
}
@section MyScripts {
<script src="~/Scripts/jquery.bootstrap.wizard.js"></script>
<script>
    $(document).ready(function () {

        $('.datepicker').datepicker({ autoclose: true });

	    $('#wizard-container').bootstrapWizard({
	        'tabClass': 'nav nav-pills',
	        'nextSelector': '.btn-next',
	        'previousSelector': '.btn-previous',
	        onTabClick: function (tab, navigation, index) {
	            return false;
	        },
	        onTabShow: function (tab, navigation, index) {
	            var total = navigation.find('li').length;
	            var current = index + 1;
	            var li = navigation.find('li');
	            var wizard = navigation.closest('#wizard-container');

	            $(navigation.find('li')).removeClass("complete");

	            for (var i = 0; i < index; i++) {
	                $(li[i]).addClass("complete");
	            }

	            if (current == (total - 1)) {
	                $(wizard).find('.btn-next').hide();
	                $(wizard).find('.btn-save').show();
	            } else {
	                $(wizard).find('.btn-next').show();
	                $(wizard).find('.btn-save').hide();
	            }

	            if (current == total) {
	                $(wizard).find('.btn-previous').hide();
	                $(wizard).find('.btn-next').hide();
	                $(wizard).find('.btn-save').hide();
	                $(li[total-1]).addClass("complete");
	            } 
	        },
	        onNext: function (tab, navigation, index) {
	            var current = index + 1;
	            if (current == 2 && $('input[name="opcer"]:checked').val() > 1) {
	                $('#wizard-container').bootstrapWizard('show', 1);
	            }
	        },
	        onPrevious: function (tab, navigation, index) {
	            var current = index + 1;
	            if (current == 2 && $('input[name="opcer"]:checked').val() > 1) {
	                $('#wizard-container').bootstrapWizard('show', 0);
	            }
	        }
	    });

	    $('.btn-save').on("click", function () {
	        $('#wizard-container').bootstrapWizard('show', 2);
	        $('#wizard-container').find('.btn-previous').hide();
	        $('#wizard-container').find('.btn-next').hide();
	        $('#wizard-container').find('.btn-save').hide();
	    });

	    $('.btn-finish').on("click", function () {
	        $(location).attr('href', '@Url.Action("Create")');
	    });
	});
</script>
}